@model MeetingManager.Application.DTOs.MeetingRequest.MeetingRequestDto
@using MeetingManager.Mvc.Helpers

@{
    ViewData["Title"] = "حذف طلب الاجتماع";
}

<div class="container mt-4 fade-in">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <i class="bi bi-exclamation-triangle-fill" style="font-size: 2rem;"></i>
                    <h2 class="mt-2">تأكيد الحذف</h2>
                    <p class="mb-0" style="font-size: 0.9rem; opacity: 0.9;">هل أنت متأكد من حذف هذا الطلب؟</p>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-circle-fill ms-1"></i>
                        <strong>تحذير:</strong> هذا الإجراء لا يمكن التراجع عنه. سيتم حذف طلب الاجتماع بشكل نهائي.
                    </div>
                    
                    <h5 class="mb-3">تفاصيل الطلب المراد حذفه:</h5>
                    
                    <dl class="row">
                        <dt class="col-sm-4">
                            <i class="bi bi-hash text-primary ms-1"></i>
                            رقم الطلب
                        </dt>
                        <dd class="col-sm-8">
                            <strong>@Model.Id</strong>
                        </dd>
                        
                        <dt class="col-sm-4">
                            <i class="bi bi-journal-text text-primary ms-1"></i>
                            الملاحظات
                        </dt>
                        <dd class="col-sm-8">@Model.Notes</dd>
                        
                        <dt class="col-sm-4">
                            <i class="bi bi-mortarboard text-primary ms-1"></i>
                            الطالب
                        </dt>
                        <dd class="col-sm-8">
                            @Model.StudentName 
                            <span class="text-muted">(رقم: @Model.StudentId)</span>
                        </dd>
                        
                        <dt class="col-sm-4">
                            <i class="bi bi-person-badge text-primary ms-1"></i>
                            السكرتير
                        </dt>
                        <dd class="col-sm-8">
                            @Model.SecretaryName 
                            <span class="text-muted">(رقم: @Model.SecretaryId)</span>
                        </dd>
                        
                        <dt class="col-sm-4">
                            <i class="bi bi-person-check text-primary ms-1"></i>
                            المدير
                        </dt>
                        <dd class="col-sm-8">
                            @Model.ManagerName 
                            <span class="text-muted">(رقم: @Model.ManagerId)</span>
                        </dd>
                        
                        <dt class="col-sm-4">
                            <i class="bi bi-people text-primary ms-1"></i>
                            المجموعة
                        </dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info">@Model.GroupName</span>
                        </dd>
                        
                        <dt class="col-sm-4">
                            <i class="bi bi-flag text-primary ms-1"></i>
                            الحالة
                        </dt>
                        <dd class="col-sm-8">
                            @await Html.PartialAsync("_StatusBadge", Model.Status)
                        </dd>
                        
                        <dt class="col-sm-4">
                            <i class="bi bi-calendar-plus text-primary ms-1"></i>
                            تاريخ الإنشاء
                        </dt>
                        <dd class="col-sm-8">
                            @ArabicFormatHelper.FormatDateTime(Model.CreatedAt)
                        </dd>
                        
                        @if (Model.UpdatedAt.HasValue)
                        {
                            <dt class="col-sm-4">
                                <i class="bi bi-calendar-check text-primary ms-1"></i>
                                آخر تحديث
                            </dt>
                            <dd class="col-sm-8">
                                @ArabicFormatHelper.FormatDateTime(Model.UpdatedAt.Value)
                            </dd>
                        }
                    </dl>
                    
                    <hr class="my-4" />
                    
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-2 justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle ms-1"></i>
                                إلغاء
                            </a>
                            <button type="submit" class="btn btn-danger" onclick="return confirm('هل أنت متأكد تماماً؟')">
                                <i class="bi bi-trash3 ms-1"></i>
                                تأكيد الحذف
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
