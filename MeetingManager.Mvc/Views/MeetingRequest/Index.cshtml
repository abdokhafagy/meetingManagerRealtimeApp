@model IEnumerable<MeetingManager.Application.DTOs.MeetingRequest.MeetingRequestDto>
@using MeetingManager.Mvc.Helpers

@{
    ViewData["Title"] = "طلبات الاجتماعات";
    var userRole = Context.Session.GetString("UserRole");
}

<div class="container mt-4 fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-calendar2-check ms-2"></i>
            طلبات الاجتماعات
        </h2>
        @if (userRole == "Secretary" || userRole == "سكرتير")
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle ms-1"></i>
                إنشاء طلب جديد
            </a>
        }
    </div>

    <div class="card">
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>
                                    <i class="bi bi-hash ms-1"></i>
                                    الرقم
                                </th>
                                <th>
                                    <i class="bi bi-person ms-1"></i>
                                    الطالب
                                </th>
                                <th>
                                    <i class="bi bi-person-badge ms-1"></i>
                                    السكرتير
                                </th>
                                <th>
                                    <i class="bi bi-person-check ms-1"></i>
                                    المدير
                                </th>
                                <th>
                                    <i class="bi bi-people ms-1"></i>
                                    المجموعة
                                </th>
                                <th>
                                    <i class="bi bi-flag ms-1"></i>
                                    الحالة
                                </th>
                                <th>
                                    <i class="bi bi-calendar-event ms-1"></i>
                                    تاريخ الإنشاء
                                </th>
                                @if (userRole == "Admin" || userRole == "Manager" || userRole == "مسؤول" || userRole == "مدير")
                                {
                                    <th>
                                        <i class="bi bi-gear ms-1"></i>
                                        الإجراءات
                                    </th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="request-row-@item.Id">
                                    <td class="fw-medium">@item.Id</td>
                                    <td>
                                        <i class="bi bi-mortarboard text-primary ms-1"></i>
                                        @item.StudentName
                                    </td>
                                    <td>@item.SecretaryName</td>
                                    <td>@item.ManagerName</td>
                                    <td>
                                        <span class="badge bg-info">
                                            <i class="bi bi-diagram-3 ms-1"></i>
                                            @item.GroupName
                                        </span>
                                    </td>
                                    <td>
                                        @await Html.PartialAsync("_StatusBadge", item.Status)
                                    </td>
                                    <td>
                                        <i class="bi bi-clock text-muted ms-1"></i>
                                        @ArabicFormatHelper.FormatDateTime(item.CreatedAt)
                                    </td>
                                    @if (userRole == "Admin" || userRole == "Manager" || userRole == "مسؤول" || userRole == "مدير")
                                    {
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="عرض التفاصيل">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                
                                                @if (item.Status == MeetingManager.Domain.Enums.MeetingRequestStatus.Pending)
                                                {
                                                    <form asp-action="UpdateStatus" method="post" class="d-inline">
                                                        <input type="hidden" name="id" value="@item.Id" />
                                                        <button type="submit" name="status" value="1" 
                                                                class="btn btn-sm btn-success" 
                                                                onclick="return confirm('هل تريد قبول هذا الطلب؟')"
                                                                title="قبول">
                                                            <i class="bi bi-check-circle"></i>
                                                        </button>
                                                    </form>
                                                    <form asp-action="UpdateStatus" method="post" class="d-inline">
                                                        <input type="hidden" name="id" value="@item.Id" />
                                                        <button type="submit" name="status" value="2" 
                                                                class="btn btn-sm btn-danger" 
                                                                onclick="return confirm('هل تريد رفض هذا الطلب؟')"
                                                                title="رفض">
                                                            <i class="bi bi-x-circle"></i>
                                                        </button>
                                                    </form>
                                                }
                                                else
                                                {
                                                    <form asp-action="UpdateStatus" method="post" class="d-inline">
                                                        <input type="hidden" name="id" value="@item.Id" />
                                                        <button type="submit" name="status" value="0" 
                                                                class="btn btn-sm btn-warning" 
                                                                onclick="return confirm('هل تريد إعادة الحالة إلى قيد الانتظار؟')"
                                                                title="قيد الانتظار">
                                                            <i class="bi bi-arrow-counterclockwise"></i>
                                                        </button>
                                                    </form>
                                                }
                                            </div>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox" style="font-size: 4rem; color: var(--color-gray-400);"></i>
                    <h4 class="mt-3 text-muted">لا توجد طلبات اجتماعات</h4>
                    @if (userRole == "Secretary" || userRole == "سكرتير")
                    {
                        <p class="text-muted">ابدأ بإنشاء طلب اجتماع جديد</p>
                        <a asp-action="Create" class="btn btn-primary mt-2">
                            <i class="bi bi-plus-circle ms-1"></i>
                            إنشاء طلب جديد
                        </a>
                    }
                </div>
            }
        </div>
    </div>
    
    @if (Model != null && Model.Any())
    {
        <div class="mt-3 text-muted text-center">
            <i class="bi bi-info-circle ms-1"></i>
            إجمالي الطلبات: <strong>@Model.Count()</strong>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Ensure connection is available
        if (window.connection) {
            // Listen for new requests (Manager)
            window.connection.on("ReceiveNewRequest", function (request) {
                // If table exists, append row
                const tableBody = document.querySelector('table tbody');
                if (tableBody) {
                    const newRow = `
                        <tr class="fade-in-row" style="background-color: #e8f5e9;">
                            <td class="fw-medium">${request.id}</td>
                            <td>
                                <i class="bi bi-mortarboard text-primary ms-1"></i>
                                ${request.studentName}
                            </td>
                            <td>${request.secretaryName}</td>
                            <td>${request.managerName}</td>
                            <td>
                                <span class="badge bg-info">
                                    <i class="bi bi-diagram-3 ms-1"></i>
                                    ${request.groupName}
                                </span>
                            </td>
                            <td>
                                <span class="badge bg-warning text-dark">
                                    <i class="bi bi-hourglass-split ms-1"></i>
                                    قيد الانتظار
                                </span>
                            </td>
                            <td>
                                <i class="bi bi-clock text-muted ms-1"></i>
                                ${new Date(request.createdAt).toLocaleString('ar-EG')}
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="/MeetingRequest/Details/${request.id}" class="btn btn-sm btn-info" title="عرض التفاصيل">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    
                                    <form action="/MeetingRequest/UpdateStatus" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="${request.id}" />
                                        <button type="submit" name="status" value="1" 
                                                class="btn btn-sm btn-success" 
                                                onclick="return confirm('هل تريد قبول هذا الطلب؟')"
                                                title="قبول">
                                            <i class="bi bi-check-circle"></i>
                                        </button>
                                    </form>
                                    <form action="/MeetingRequest/UpdateStatus" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="${request.id}" />
                                        <button type="submit" name="status" value="2" 
                                                class="btn btn-sm btn-danger" 
                                                onclick="return confirm('هل تريد رفض هذا الطلب؟')"
                                                title="رفض">
                                            <i class="bi bi-x-circle"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    `;
                    tableBody.insertAdjacentHTML('afterbegin', newRow);
                    
                    // Play sound or show toast
                    const toastHtml = `
                        <div class="toast-container position-fixed bottom-0 end-0 p-3">
                            <div class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
                                <div class="toast-header bg-success text-white">
                                    <strong class="me-auto">طلب جديد</strong>
                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
                                </div>
                                <div class="toast-body">
                                    تم استلام طلب جديد من ${request.studentName}
                                </div>
                            </div>
                        </div>
                    `;
                    $('body').append(toastHtml);
                } else {
                    // If table doesn't exist (empty state), reload to show the table
                    window.location.reload();
                }
            });

            // Listen for status updates (Secretary)
            window.connection.on("ReceiveStatusUpdate", function (requestId, status) {
                const row = document.getElementById(`request-row-${requestId}`);
                if (row) {
                    // Update status badge (6th column, index 5)
                    const statusCell = row.cells[5];
                    let badgeClass = "bg-secondary";
                    let iconClass = "bi-question-circle";
                    let statusText = status;

                    if (status === "Pending" || status === "0") {
                        badgeClass = "bg-warning text-dark";
                        iconClass = "bi-clock-history";
                        statusText = "قيد الانتظار";
                    } else if (status === "Accepted" || status === "1") {
                        badgeClass = "bg-success";
                        iconClass = "bi-check-circle-fill";
                        statusText = "مقبول";
                    } else if (status === "Rejected" || status === "2") {
                        badgeClass = "bg-danger";
                        iconClass = "bi-x-circle-fill";
                        statusText = "مرفوض";
                    }

                    statusCell.innerHTML = `
                        <span class="badge ${badgeClass}">
                            <i class="bi ${iconClass}"></i>
                            ${statusText}
                        </span>
                    `;

                    // Highlight row briefly
                    row.classList.add("table-active");
                    setTimeout(() => row.classList.remove("table-active"), 2000);
                }
            });
        } else {
            console.error("SignalR connection not initialized. Real-time updates disabled.");
        }
    </script>
}
